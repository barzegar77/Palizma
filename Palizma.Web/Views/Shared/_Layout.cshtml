<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- style -->
    <link rel="stylesheet" href="~/style/main.css" />
    <!-- font awesome-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- animation css (animate css) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <title>Palizma</title>
  </head>
  <body id="body">
    <div class="bg-main"></div>
    <!-- document -->
    <nav class="nav">
      <span class="highlicht" id="span-header"></span>
      <div class="container">
        <div class="wrapper-brand">
         <div class="bg-brand"></div>
          <h5>Palizma</h5>
        </div>
        <div class="menu" id="menu">
            <ul class="menu-center">
          <li><a href="#" class="list-items active">Home</a></li>
          <li><a href="./turist.html" class="list-items">Tours</a></li>
          <li><a href="./infoTour.html" class="list-items">projects</a></li>
          <li><a href="#" class="list-items">blog</a></li>
          <li><a href="#" class="list-items">about us</a></li>
        </ul>
        <ul class="menu-right">
          <li><a asp-controller="Account" asp-action="login" class="log-in" id="log-in">log in</a></li>
          <li><a asp-controller="Account" asp-action="Register" class="sign-up" id="sign-up">Register</a></li>
        </ul>
        </div>
        <i class="fal fa-bars" id="menu-bars"></i>
      </div>
    </nav>


    @RenderBody()

    <footer class="footer">
      <div class="container">
        <div class="wrapper-footer">
          <div class="column-one columny">
            <div class="wrapper-name-site">
              <h5 class="title">Palizma</h5>
              <div class="bg-brand"></div>
            </div>
            <p class="Definition-of-self caption">
              We always make our customers <br>
              happy by providing as many  <br>
              choices as possible. <br>
            </p>
          </div>
          <div class="column-two columny">
              <h5 class="title">About</h5>
              <ul class="menu-about">
                <li><a href="#">Cuntact Us</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">FAQ</a></li>
              </ul>
          </div>
          <div class="column-three columny">
              <h5 class="title">Social Media</h5>
              <p class="caption">Follow us on social media <br>
                and join us.</p>
                <div class="wrapper-Social-Networks">
                  <img src="~/image/Linkedin.png" alt="Linkedin Logo" class="Linkedin-Logo"> 
                  <img src="~/image/Twitter.png" alt="Twitter  Logo" class="Twitter-Logo"> 
                  <img src="~/image/Facebook.png" alt="Facebook Logo" class="Facebook-Logo"> 
                  <img src="~/image/Instagram.png" alt="Instagram Logo" class="Instagram-Logo"> 
                  <img src="~/image/Tripadvisor_Logo.png" alt="Tripadvisor Logo" class="Tripadvisor-Logo"> 
                </div>
          </div>
          <div class="column-four columny">
              <h5 class="title">Get in Touch</h5>
              <p class="caption">Question or feedback? <br>
                We’d love to hear from you</p>
                <div class="wrapper-email">
                  <input type="email" placeholder="Email Address">
                  <img src="~/image/send-email.png" alt="logo send email">
                </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- script -->
    <script src="~/scripts/home.js" type="module"></script>
  </body>
</html>
